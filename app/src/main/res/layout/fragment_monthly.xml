<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MonthlyFragment"
    android:background="#00ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/calendarBackground">

            <Button
                android:id="@+id/MonthlyFragment_Button_left"
                android:background="@drawable/arrow_left"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginHorizontal="50dp"/>

            <TextView
                android:id="@+id/MonthlyFragment_TextView_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11 월"
                android:textSize="25sp"
                android:fontFamily="sans-serif"/>

            <Button
                android:id="@+id/MonthlyFragment_Button_right"
                android:background="@drawable/arrow_right"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginHorizontal="50dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:background="@color/calendarBackground"
            android:orientation="horizontal">

            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="일"
                android:textSize="15sp"
                android:textColor="@color/calendarRed"
                android:textStyle="normal"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="월"
                android:textSize="15sp"
                android:textColor="#000000"
                android:textStyle="normal"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="화"
                android:textSize="15sp"
                android:textColor="#000000"
                android:textStyle="normal"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="수"
                android:textSize="15sp"
                android:textColor="#000000"
                android:textStyle="normal"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="목"
                android:textSize="15sp"
                android:textColor="#000000"
                android:textStyle="normal"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="금"
                android:textSize="15sp"
                android:textColor="#000000"
                android:textStyle="normal"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="토"
                android:textSize="15sp"
                android:textColor="@color/calendarBlue"
                android:textStyle="normal"/>

        </LinearLayout>

        <GridView
            android:id="@+id/MonthlyFragment_GridView_gridView"
            android:layout_width="350dp"
            android:layout_height="420dp"
            android:numColumns="7"
            android:background="@color/calendarBackground">

        </GridView>



    </LinearLayout>

</FrameLayout>