<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="70dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/WeekLayout_LinearLayout_topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/WeekLayout_TextView_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="1 일"
            android:textSize="14sp"
            android:textColor="#000000"
            android:gravity="left"/>

        <TextView
            android:id="@+id/WeekLayout_TextView_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="(금)"
            android:textSize="14sp"
            android:textColor="#000000"
            android:gravity="left"/>

        <TextView
            android:id="@+id/WeekLayout_TextView_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="여기는 제목의 자리입니다"
            android:textSize="14sp"
            android:textColor="#000000"
            android:gravity="left"/>

    </LinearLayout>

    <TextView
        android:id="@+id/WeekLayout_TextView_contents"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="약속일정"
        android:textSize="14sp"
        android:fontFamily="sans-serif-smallcaps"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"/>

</LinearLayout>
